<%= form_with(model: chapter, local: true, class: "mt-3 mb-4") do |form| %>
  <% if chapter.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>

      <ul>
      <% chapter.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
      <div class="field form-group">
        <%= form.label :city %>
        <%= form.text_field :city, class:"form-control"%>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
      <div class="field form-group">
        <%= form.label 'Country' %> <br>
        <%= collection_select(:chapter, :country_id, Country.all, :id, :name, prompt: 'Please choose a chapter', class:'form-control') %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
      <div class="field form-group">
        <%= form.label :lead %>
        <%= form.text_field :lead, class:"form-control"%>
      </div>

    </div>
    <div class="col-md-4 col-md-offset-4 col-xs-8 col-xs-offset-2">
      <div class="field form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control"%>
      </div>

    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="actions">
        <%= form.submit "Update", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
<% end %>
