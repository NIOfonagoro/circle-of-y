<div class="container chapters">
  <p id="notice"><%= notice %></p>

  <div class="row text-center">
    <div class="col-xs-2">
      <%= link_to 'Chapters', chapters_path %>
    </div>
    <div class="col-xs-8">
      <h2 class="title"><%= @chapter.city %></h2>
      <h4 class="subtitle"><%= @chapter.country.name %></h4>
    </div>
    <div class="col-xs-2">
      <%= link_to 'Edit', edit_chapter_path(@chapter) %>
    </div>
  </div>
  <div class="row text-center">
    <div class="col-xs-6 col-xs-offset-3">
      <h5>Lead(s)</h5>
      <%= @chapter.lead %>
    </div>
  </div>
</div>
