<div class="container">
  <div class="row mt-2">
    <div class="col-md-8 col-md-offset-2">

      <h1 class="text-center">My Profile</h1>

      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 text-center">
            <div class="profile-pic-container">
              <% if current_user.image_changed? %>
              <%= image_tag(current_user.image, :class => "profile-picture ", :alt => "Your Profile Picture") %>
              <% else %>
              <%= image_tag 'profile-placeholder.jpg', :class => "profile-picture", :alt => "Profile Placeholder Image" %>
              <% end %>
            </div>
          </div>
          <div class="text-info col-md-6">
            <p><strong>Full Name: </strong> <%= @user.full_name %></p>
            <br>
            <p><strong>Email: </strong> <%= @user.email %></p>
            <br>
            <p><strong>Organisation: </strong> <%= @user.organisation %></p>
            <br>
            <a target="_blank" href="https://www.twitter.com/<%= @user.twitter_url %>"><strong>Twitter Handle: </strong> <%= @user.twitter_url %></a>
            <br>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-6 text-center">
            <img src="/images/no_profile.jpg" alt="Your Profile Picture" class="img-circle profile-picture">
          </div>
          <div class="col-md-6 text-info">
            <p><strong>Chapter Lead: </strong> <%= @user.chapter.lead %></p>
            <br>
            <p><strong>Chapter Lead Email: </strong> <%= @user.chapter.email %></p>
            <br>
            <p><strong>Chapter Lead City: </strong> <%= @user.chapter.city %></p>
            <br>
          </div>
        </div>
      </div>
    </div>



    <hr>


  </div>
</div>
</div>
